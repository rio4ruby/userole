.container
  = render partial: 'users/messages', locals: { resource: @user }
  = bootstrap_form_for(@user, layout: :horizontal, label_col: 'col-sm-4', control_col: 'col-sm-6') do |f|
    .card
      .card-header Edit User
      .card-body
        = f.email_field :email, autofocus: true, autocomplete: 'off'
        = f.password_field :password, autocomplete: "off"
        = f.password_field :password_confirmation, autocomplete: "off"
      .card-footer
        = f.submit 'Update User', class: 'btn btn-primary card-link'
        = link_to 'Cancel', users_path, role: 'button', class: 'btn btn-secondary card-link'
